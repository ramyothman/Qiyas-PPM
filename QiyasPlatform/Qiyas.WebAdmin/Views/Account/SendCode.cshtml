@model Qiyas.WebAdmin.Models.SendCodeViewModel
@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
    ViewBag.Title = Resources.MainResource.SendCodeTitle;
}

@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4>ارسال الكود التأكيدي</h4>
    <hr />
    <div class="form-group send-code-submit">
        @Resources.MainResource.SendCodeSelectProviderLabel
        @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
        <input type="submit" value="&#xf053;" class="btn btn-default" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
