@{
	var grid = Html.DevExpress().GridView(settings => {
        settings.Name = "ExamRequirementItemGridView";
        settings.CallbackRouteValues = new { Controller = "ExamCenterNeeds", Action = "ExamRequirementItemGridViewPartial" };

				settings.SettingsEditing.AddNewRowRouteValues = new { Controller = "ExamCenterNeeds", Action = "ExamRequirementItemGridViewPartialAddNew" };
